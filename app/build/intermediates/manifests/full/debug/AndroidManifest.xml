<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="foodcabinet.foodcabinet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-feature
            android:name="android.hardware.camera"
            android:required="false" />

        <activity android:name="foodcabinet.foodcabinet.Home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="foodcabinet.foodcabinet.ZoomedInProduct" >
        </activity>
        <activity
            android:name="foodcabinet.foodcabinet.AddProductsScreen"
            android:label="@string/title_activity_add_products_screen"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>